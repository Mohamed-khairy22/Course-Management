@using ITI_task1.Models
@model Course
@{
    ViewData["Title"] = "addCrs";
    SelectList depts = new SelectList(ViewBag.Depts, "Id", "Name");
}

<h1>Add Course</h1>
<form  asp-action="SaveNew" asp-controller="Course">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class=" form-control " />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Degree"></label>
        <input asp-for="Degree" class=" form-control " />
        <span asp-validation-for="Degree" class="text-danger"></span>

    </div>
    <div>
        <label asp-for="minDegree"></label>
        <input asp-for="minDegree" class=" form-control " />
        <span asp-validation-for="minDegree" class="text-danger"></span>

    </div>
    <div>
        <label asp-for="deptId"></label>
        <select class="form-control" asp-for="deptId" asp-items="depts">
            <option selected value="null">Select a department</option>
        </select>
    </div>

    <input type="submit" value="add" class="btn btn-success" />
</form>
