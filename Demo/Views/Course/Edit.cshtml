@using ITI_task1.Models
@model Course

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<form method="post" action="/Course/SaveEdit/@Model.Id">
    <div>
        <label>Name</label>
        <input type="text" name="Name" value="@Model.Name" class="form form-control" />

    </div>
    <div>
        <label>Degree</label>
        <input type="number" name="Degree" value="@Model.Degree" class="form form-control" />
    </div>
    <div>
        <label>minDegree</label>
        <input type="text" name="minDegree" value="@Model.minDegree" class="form form-control" />
    </div>
    <div>
        <label>Department</label>
        <select name="deptId" id="deptId" class="form form-control">
            @foreach (Department1 dept in ViewBag.depList)
            {
                if (Model.deptId == dept.Id)
                {
                    <option value="@dept.Id" selected>@dept.Name</option>
                }
                else
                {
                    <option value="@dept.Id" sel>@dept.Name</option>
                }
            }
        </select>
        
    </div>

    <input type="submit" value="Save" />
</form>

