@using ITI_task1.Models
@model List<Course>

@{
    ViewData["Title"] = "Index";
}

<h1>Courses</h1>
<h2><a asp-action="addCrs" asp-controller="course">Add Course</a>  </h2>
<table class="table table-bordered table-hover " >
    <tr>
        <th>Name</th>
        <th>Degree</th>
        <th>Minmum Degree</th>
        <th>Edit</th>
        <th>Delete</th>

    </tr>
    
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Degree</td>
            <td>@item.minDegree</td>
            <td><a asp-action="Edit" asp-controller="Course" asp-route-id="@item.Id ">Edit</a></td>
            <td><a asp-action="deletecrs" asp-controller="Course" asp-route-id="@item.Id" onclick="return confirm('Are you sure to delete the Course')">Delete</a></td>
        </tr>
    }
    
</table>

