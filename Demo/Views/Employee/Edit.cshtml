@model Employee
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<form method="post" action="/employee/saveEdite/@Model.Id">
    <div>
        <label>Name</label>
        <input type="text" name="Name" value="@Model.Name" class="form form-control" />
    </div>
    <div>
        <label>Salary</label>
        <input type="number" name="Salary" value="@Model.Salary" class="form form-control"/>
    </div>
    <div>
        <label>Address</label>
        <input type="text" name="Address" value="@Model.Address" class="form form-control" />
    </div>
    <div>
        <label>Image</label>
        <input type="text" name="image" value="@Model.image" class="form form-control" />
    </div>
    <div>
        <label>Department</label>
        <select name="DepID" id="DepID" class="form form-control">
            @foreach (Department dept in ViewBag.deptList)
            {
                if(Model.DepID==dept.Id)
                {
                    <option value="@dept.Id" selected>@dept.Name</option>

                }
                else{
                <option value="@dept.Id" sel>@dept.Name</option>
                }
            }
        </select>
    </div>
    <input type="submit" value="Save" />
</form>
