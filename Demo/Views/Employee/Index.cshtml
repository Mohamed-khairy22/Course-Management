@model List<Employee>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<table class="table table-bordered table-hover">
    <tr>
        <th>Name</th>
        <th>Salary</th>
        <th>Address</th>
        <th>Image</th>
        <th>Deprtment</th>
        <th>Editing</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Salary</td>
            <td>@item.Address</td>
            <td>@item.image</td>
            <td>@item.DepID</td>

            <td><a href="/Employee/Edit/@item.Id">Edit</a></td>

        </tr>
    }
</table>

